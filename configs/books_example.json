{
  "name": "books_scraper",
  "base_url": "http://books.toscrape.com",
  "mode": "pagination",
  "rate_limit": 10,
  "concurrency": 4,
  "use_checkpointing": true,
  "fields": [
    {
      "name": "books",
      "selector": "article.product_pod",
      "is_list": true,
      "children": [
        {
          "name": "title",
          "selector": "h3 a",
          "attribute": "title"
        },
        {
          "name": "price",
          "selector": "p.price_color",
          "transformers": ["strip", "to_float"]
        },
        {
          "name": "availability",
          "selector": "p.instock.availability",
          "transformers": ["strip"]
        }
      ]
    }
  ],
  "pagination": {
    "selector": "li.next a",
    "max_pages": 3
  }
}