{
    "name": "discord_servers",
    "base_url": "https://disboard.org/servers/tag/anime",
    "mode": "pagination",
    "use_playwright": true,
    "wait_for_selector": "div.listing-card",
    "interactions": [
        {
            "type": "wait",
            "duration": 10000
        },
        {
            "type": "scroll"
        }
    ],
    "fields": [
        {
            "name": "server_list",
            "selector": "div.listing-card",
            "is_list": true,
            "children": [
                {
                    "name": "title",
                    "selector": "div.server-name a",
                    "transformers": ["strip"]
                },
                {
                    "name": "description",
                    "selector": "div.server-description",
                    "transformers": ["strip"]
                },
                {
                    "name": "online_count",
                    "selector": "span.server-online",
                    "transformers": ["strip", "to_int"]
                },
                {
                    "name": "tags",
                    "selector": "ul.tags a.tag .name",
                    "is_list": true,
                    "transformers": ["strip"]
                }
            ]
        }
    ],
    "pagination": {
        "selector": "a.pagination-next",
        "max_pages": 2
    }
}